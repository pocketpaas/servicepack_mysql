#!/bin/bash

TYPE=$1

# include shared variables
. `dirname $0`/vars

case $TYPE in
    os)
        echo 'ubuntu/12.10';;
    secrets)
        echo 'MYSQL_PASSWORD';;
    env)
        echo 'MYSQL_PORT=3306'
        echo "MYSQL_USER=$SERVICE_DB_USER"
        echo "MYSQL_DATABASE=$SERVICE_DB_NAME"
        echo 'MYSQL_HOST=%IP'
        ;;
esac
